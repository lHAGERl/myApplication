<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


   <Button
       android:id="@+id/centerBT"
        android:layout_width="200dp"
       android:layout_height="150dp"
        android:layout_centerInParent="true"
       android:text="BUTTON"
       android:textColor="#FFFFFFFF"
       android:background="#FF03DAC5"></Button>

    <Button
        android:layout_width="35dp"
       android:layout_height="35dp"
        android:layout_above="@id/centerBT"
        android:layout_alignStart="@id/centerBT"

       android:background="#FF6200EE"></Button>


    <Button
       android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@id/centerBT"
        android:layout_toEndOf="@id/centerBT"
        android:background="#FF6200EE"></Button>

   <Button
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_toStartOf="@id/centerBT"
        android:layout_alignBottom="@id/centerBT"
       android:background="#FF6200EE"></Button>

    <Button
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@id/centerBT"
        android:layout_below="@id/centerBT"
        android:background="#FF6200EE"></Button>


</RelativeLayout>